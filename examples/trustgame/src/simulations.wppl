    //   map(function(role) {
    //     let relevantActions = filter(function(x) {
    //       return _.isEqual(x[0].turn, role)
    //       }, traj)
    //
    //   }, ['investor', 'investee'])
    // }
    let withoutRewards = map(function(trajs) {
