    let avgInvestAsProp = listMean(map(function(x) {
      let res = x[1] / 4
      // display(res)
      return res
      },
      filter(function(x) {return _.isEqual(x[0].turn, 'investor')},
        arrayConcat(withoutRewards))))
    let avgRetAsProp = listMean(map(function(x) {
        let received = 2 * x[0].investments[0]
